{
  "name": "adoptaunpeludo-backend",
  "version": "0.0.1",
  "description": "Backend para adoptaunpeludo",
  "main": "index.js",
  "scripts": {
    "dev": "tsnd --respawn --clear src/app.ts",
    "build": "rimraf ./dist && tsc",
    "start": "npm run build && node dist/app.js",
    "seed": "ts-node-dev ./src/data/seed/seed.ts",
    "test": "dotenv -e .env.test -- jest --runInBand",
    "test:watch": "dotenv -e .env.test -- jest --watch --runInBand",
    "test:coverage": "jest --coverage",
    "migrate:test": "dotenv -e .env.test -- npx prisma migrate deploy"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Adoptaunpeludo/backend.git"
  },
  "author": "J.Alberto, Paco, Pol, Juanma",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Adoptaunpeludo/backend/issues"
  },
  "homepage": "https://github.com/Adoptaunpeludo/backend#readme",
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.6",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.11.8",
    "@types/supertest": "^6.0.2",
    "jest": "^29.7.0",
    "prisma": "^5.8.1",
    "rimraf": "^5.0.5",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@prisma/client": "^5.9.1",
    "bcryptjs": "^2.4.3",
    "class-sanitizer": "^1.0.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cookie-parser": "^1.4.6",
    "dotenv": "^16.4.1",
    "dotenv-cli": "^7.3.0",
    "env-var": "^7.4.1",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "http-status-codes": "^2.3.0",
    "jsonwebtoken": "^9.0.2"
  }
}
