// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ContactInfo {
  userID       String @id
  address      String
  phone_number String
  user         Users? @relation(fields: [userID], references: [userID], onDelete: Cascade)
}

model Users {
  userID      String       @id @default(uuid())
  email       String       @unique
  password    String
  adopter     Adopters?
  shelter     Shelters?
  contactInfo ContactInfo?
  Admin       Admins?
}

model Adopters {
  adopterID  String @id
  first_name String
  last_name  String
  role       String @default("adopter")
  user       Users? @relation(fields: [adopterID], references: [userID], onDelete: Cascade)
}

model Shelters {
  shelterID String @id
  name      String
  role      String @default("shelter")
  user      Users? @relation(fields: [shelterID], references: [userID], onDelete: Cascade)
}

model Admins {
  adminID String @id
  name    String
  role    String @default("admin")
  user    Users? @relation(fields: [adminID], references: [userID], onDelete: Cascade)
}
