// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  UserID    Int      @id @default(autoincrement())
  Email     String   @unique
  Username  String
  Password  String
  Direccion String?
  Telefono  String?
  Adopter   Adopter?
  Shelter   Shelter?
}

model Adopter {
  AdopterID Int    @id @default(autoincrement())
  UserID    Int    @unique
  Nombre    String
  Apellidos String
  DNI       String
  User      Users  @relation(fields: [UserID], references: [UserID])
}

model Shelter {
  ShelterID Int    @id @default(autoincrement())
  UserID    Int    @unique
  CIF       String
  Nombre    String
  User      Users  @relation(fields: [UserID], references: [UserID])
}
